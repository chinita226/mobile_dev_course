<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.hkr.navigation.ui.auth.login.LoginFragment"
        android:label="@string/label_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:popUpTo="@id/loginFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.hkr.navigation.ui.auth.forgotPassword.ForgotPasswordFragment"
        android:label="@string/label_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <activity
        android:id="@+id/authActivity"
        android:name="com.hkr.navigation.ui.auth.AuthActivity"
        android:label="AuthActivity" />
</navigation>